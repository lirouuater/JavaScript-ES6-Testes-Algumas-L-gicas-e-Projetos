// Foco no estudo de Orientação ao Objeto em JavaScript;
// Crie uma classe que simula uma conta no banco (utilize a forma que preferir);
// Deve conter a propriedade saldo; e os métodos depósito e saque;
// Teste os métodos;

class Conta {
   constructor(saldo) {
      this.saldo = saldo;
   }


   deposito(valor) {
      this.saldo += valor;
   }

   saque(valor) {
      this.saldo -= valor;
   }



}

let conta = new Conta(1000);

conta.deposito(1500);

console.log(conta.saldo);


conta.saque(500);
console.log(conta.saldo);
